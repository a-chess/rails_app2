<% provide(:title, "TCマスタメンテ") %>

<div class="container" style="width:60%">
	<h4>TCインデックス</h4>
	
	<table class="my_table">
		<thead>
			<tr>
				<th width="40%">対象年月</th>
				<th>アクション</th>
			</tr>
		</thead>
		<tbody>
			<% @tc_month_list.each do |t| %>
				<tr>
					<td>
						<%= t.target_month%>
					</td>
					<td>
						<%= link_to "作成",
							"#{tcmente_path}/#{t.target_month}", 
							method: :post, data: {confirm: "全職員分のタイムカードを作成します。（#{t.target_month}）"} %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
	<div class="row">
		<div class="col-md-2 offset-md-8">
			<%= link_to "戻る",:back, class:"btn btn-primary" %>
		</div>
		<div class="col-md-2">
			<%= link_to "追加",tcmente_path, class:"btn btn-primary", method: :post, data: {confirm: "TCインデックスを追加します。"} %>
		</div>
	</div>
	
</div>
