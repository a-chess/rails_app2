<% provide(:title, '経費') %>

<div class="container" style="width:70%">
	<h3>経費入力</h3>
	<table class="table table-hover">
		<thead class="thead-dark">
			<tr class="row m-0 ">
				<th class="d-inline-block col-2">#</th>
				<th class="d-inline-block col-5">対象年月</th>
				<th class="d-inline-block col-5">ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% count=0 %>
			<% @tc_list.each do |tc|%>
				<% count+=1 %>
				<tr class="row m-0">
					<td class="d-inline-block col-2"><%= count %></td>
					<td class="d-inline-block col-5">
						<%= link_to tc.target_month, edit_expence_path(tc) %>
					</td>
					<td class="d-inline-block col-5">
						<%= Generic.find_by(kbn:"K01", key1: tc.keihi_shinsei_kbn).data1 %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
	<div class="row">
		<div class="col-md-2 offset-md-10">
			<%= link_to "戻る", home_path, class:"btn btn-primary" %>
		</div>
	</div>
</div>
